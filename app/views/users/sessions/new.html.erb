<div class="wrapper fadeInDown">
  <div id="formContent">
    <h2>Location App</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if flash.alert %>
       <div id=”error_explanation”>
        <%= flash.alert %>
       </div>
      <% end %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "fadeIn second", id: "login", placeholder: 'email' %>
      <%= f.password_field :password, autocomplete: "current-password", class: "fadeIn third", id: 'password', placeholder: 'password' %>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions fadeIn fourth">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
